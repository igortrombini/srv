generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  imobis   Imobi[] // Define a one-to-many relationship with Imobi

  @@map("users")
}

model Imobi {
  id         Int      @id @default(autoincrement())
  tipo       String?
  thumb      String?
  endereco   String?
  cidade     String?
  uf         String?
  valor      String?
  descricao  String?
  userId     Int
  created_at DateTime @default(now())
  author     User     @relation(fields: [userId], references: [id]) // Define the relationship with User

  @@map("imoveis")
}
